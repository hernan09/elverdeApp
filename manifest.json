{
    "manifest_version": 3,
    "name": "Mi Extensión de Chrome",
    "version": "1.0",
    "description": "Descripción de mi extensión",
    "permissions": [
      "tabs", "Permite interactuar con las pestañas del navegador",
      "activeTab",  "Permite a la extensión interactuar con la pestaña activa",
      "http://*/*",  "Permite acceso a cualquier URL HTTP",
      "https://*/*" ," Permite acceso a cualquier URL HTTPS"
    ],
    "action": {
      "default_popup": "./build/index.html",
      "default_icon": {
        "16": "./build/16x16.png", 
        "48": "./build/48x48.png", 
        "128": "./build/128x128.png"
      }
    },
    "icons": {
      "16": "./build/16x16.png",
      "48": "./build/48x48.png",
      "128": "./build/128x128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "browser_action": {
      "default_popup": "./build/index.html",
      "default_icon": "./build/48x48.png",
      "default_title": "El Verde"
    },
    "permissions": [
      "storage" 
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"] 
      }
    ]
  }
  